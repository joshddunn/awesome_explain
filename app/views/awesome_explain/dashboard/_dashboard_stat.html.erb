<div class="w-1/4 pt-3 px-3">
    <div class="bg-<%= color %>-500 border rounded px-1 py-2">
      <div class="flex flex-row items-center">
        <div class="flex-shrink"><i class="fa fa-wallet fa-2x fa-fw fa-inverse"></i></div>
        <div class="flex-1 px-2">
          <h2 class="text-white text-2xl"><%= label %></h2>
          <hr class="border-b-1 border-white-100 opacity-25" />
          <div class="flex justify-between">
            <div class="text-gray-700 text-left py-2">
              <h3 class="text-white text-2xl">
                <span class="block text-left text-sm m-0 p-0">Total Count</span>
                <%= count %>
              </h3>
            </div>

            <div class="text-gray-700 text-left py-2 pr-2">
              <h3 class="text-white text-2xl">
                <span class="block text-left text-sm m-0 p-0">Max Duration</span>
                <%= max_duration %>
              </h3>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
